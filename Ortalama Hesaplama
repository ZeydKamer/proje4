#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	
	printf("Ogrenci Ortalama Bilgi Sistemine Hosgeldiniz...\n\n");
	int s1,s2,ort;
	
	printf("Birinci Sinav Degerini Giriniz: ");
	scanf("%d",&s1);
	
	printf("Ikinci Sinav Degerini Giriniz: ");
	scanf("%d",&s2);
	
	ort=(s1+s2)/2;
	
	printf("Ortalama: %d\n\n",ort);
	if(ort>=50)
	{
		printf("Tebrikler Gectiniz :)");
	}
	else
		printf("Malesef Kaldiniz :/");
	
		
	
	return 0;
}
